<!-- nav_header.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/brandColor">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/personImg"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/brandColor"
        app:civ_border_width="@dimen/_1sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingClass" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_4sdp"

        >

        <!-- Username -->
        <TextView
            android:id="@+id/useNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textStyle="bold" />

        <!-- Optional: Verification Badge -->
        <!--
        <ImageView
            android:id="@+id/verfyImg"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/verify"
            android:layout_gravity="center"
            android:visibility="visible" />

            -->
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ensure your safety"
        android:layout_marginTop="@dimen/_3sdp"
        android:textColor="#C6FFFFFF"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/_8sdp"
        />
</LinearLayout>
